{
    "manifest_version": 3,
    "name": "Bilibili Emoji",
    "version": "1.1",
    "description": "哔哩哔哩充电表情包",
    "permissions": [
        "scripting"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "host_permissions": [
        "https://*.bilibili.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://live.bilibili.com/*"
            ],
            "js": [
                "live.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://space.bilibili.com/*"
            ],
            "js": [
                "space.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://www.bilibili.com/video/*"
            ],
            "js": [
                "video.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "live_script.js",
                "space_script.js",
                "video_script.js",
                "ajaxhook.min.js"
            ],
            "matches": [
                "https://*.bilibili.com/*"
            ]
        }
    ]
}